%h1 This is your transaction!
%ul
    - @transactions.each do |transaction|
        %li= transaction.created_at
        %p= transaction.amount
        %p= transaction.description
        %p= link_to "Add a Payment", new_account_transaction_payment_path(@account, transaction), class: "button"
        %p= link_to "Take a Peek", account_transaction_path(@account, transaction)